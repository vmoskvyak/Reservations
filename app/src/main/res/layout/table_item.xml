<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vmoskvyak.reservations.ui.fragments.tables.TableItemViewModel" />
        <variable
            name="click"
            type="com.vmoskvyak.reservations.ui.adapters.TablesAdapter.OnTableClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="@{()->click.onTableClick(viewModel)}">
        <ImageView
            android:id="@+id/iv_table"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            app:imageResource="@{viewModel.getImgDrawableId()}"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars" />
    </LinearLayout>

</layout>
